{
  "extends": [
    "github>pagopa/eng-renovate",
    ":automergeRequireAllStatusChecks",
    ":automergeStableNonMajor",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":rebaseStalePrs"
  ],
  "labels": [
    "dependencies"
  ],
  "ignorePaths": [
    "docker/docker-compose.yml"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "@protobuf-ts"
      ],
      "groupName": "protobuf-ts monorepo"
    },
    {
      "enabled": true,
      "matchDepTypes": [
        "devDependencies"
      ]
    }
  ],
  "major": {
    "enabled": true
  },
  "minor": {
    "enabled": true
  },
  "patch": {
    "enabled": true
  },
  "digest": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "rollback": {
    "enabled": true
  },
  "replacement": {
    "enabled": true
  }
}