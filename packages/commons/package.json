{
  "name": "pagopa-interop-commons",
  "private": true,
  "version": "1.0.0",
  "description": "PagoPA Interoperability common utilities",
  "main": "dist",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:autofix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "start": "node --loader ts-node/esm --watch ./src/index.ts",
    "build": "tsc && pnpm run copy-sql-files && cpx './src/pdf-generator/paged.polyfill.js' './dist/pdf-generator'",
    "check": "tsc --project tsconfig.check.json",
    "copy-sql-files": "cp ./src/repositories/sql/*.sql dist/repositories/sql"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@aws-sdk/client-kms": "3.583.0",
    "@aws-sdk/client-s3": "3.583.0",
    "@zodios/core": "10.9.6",
    "@zodios/express": "10.6.1",
    "axios": "1.7.2",
    "connection-string": "4.4.0",
    "date-fns": "3.6.0",
    "date-fns-tz": "3.1.3",
    "handlebars": "4.7.8",
    "jsonwebtoken": "9.0.2",
    "jwks-rsa": "3.1.0",
    "kafkajs": "2.2.4",
    "mongodb": "6.7.0",
    "pagopa-interop-models": "workspace:*",
    "pg-promise": "11.7.8",
    "ts-pattern": "5.1.2",
    "puppeteer": "22.10.0",
    "uuid": "9.0.1",
    "winston": "3.13.0",
    "zod": "3.23.8",
    "zod-validation-error": "3.3.0"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "20.12.13",
    "@types/uuid": "9.0.8",
    "eslint": "8.57.0",
    "cpx2": "7.0.1",
    "prettier": "2.8.8",
    "typescript": "5.4.5"
  }
}
