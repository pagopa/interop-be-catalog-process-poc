{
  "name": "pagopa-interop-commons",
  "private": true,
  "version": "1.0.0",
  "description": "PagoPA Interoperability common utilities",
  "main": "dist",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:autofix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "start": "node --watch --loader ts-node/esm ./src/index.ts",
    "build": "tsc && pnpm run copy-sql-files",
    "copy-sql-files": "cp ./src/repositories/sql/*.sql dist/repositories/sql"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@aws-sdk/client-kms": "3.515.0",
    "@aws-sdk/client-s3": "3.367.0",
    "@aws-sdk/client-sqs": "3.529.1",
    "@zodios/core": "10.9.6",
    "@zodios/express": "10.6.1",
    "axios": "1.6.8",
    "connection-string": "4.3.6",
    "express-winston": "4.2.0",
    "jsonwebtoken": "9.0.2",
    "jwks-rsa": "3.0.1",
    "kafkajs": "2.2.4",
    "mongodb": "5.6.0",
    "pagopa-interop-models": "workspace:*",
    "pg-promise": "11.5.0",
    "ts-pattern": "5.0.6",
    "uuid": "9.0.1",
    "winston": "3.9.0",
    "zod": "3.21.4",
    "zod-validation-error": "^3.1.0"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "20.3.1",
    "@types/uuid": "9.0.8",
    "eslint": "8.44.0",
    "prettier": "2.8.8",
    "typescript": "5.1.3"
  }
}
