{
  "name": "pagopa-interop-commons",
  "private": true,
  "version": "1.0.0",
  "description": "PagoPA Interoperability common utilities",
  "main": "dist",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:autofix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "start": "node --watch --no-warnings --loader ts-node/esm ./src/index.ts",
    "build": "tsc && pnpm run copy-sql-files",
    "copy-sql-files": "cp ./src/repositories/sql/*.sql dist/repositories/sql"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.367.0",
    "@zodios/core": "^10.9.2",
    "@zodios/express": "^10.6.1",
    "connection-string": "^4.3.6",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "mongodb": "5.6.0",
    "pagopa-interop-models": "workspace:*",
    "pg-promise": "^11.5.0",
    "ts-pattern": "^5.0.1",
    "winston": "^3.9.0",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "eslint": "^8.44.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  }
}
