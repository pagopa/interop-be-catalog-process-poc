{
  "name": "pagopa-interop-bff",
  "version": "1.0.0",
  "description": "PagoPA Backend for Frontend",
  "main": "dist",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:autofix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "start": "node --loader ts-node/esm -r 'dotenv-flow/config' --watch ./src/index.ts",
    "build": "tsc",
    "check": "tsc --project tsconfig.check.json",
    "generate-model": "pnpm generate-model-bff && pnpm generate-model-tenant-process",
    "generate-model-bff": "mkdir -p ./src/model/generated && pnpm openapi-zod-client './open-api/bff-spec.yml' -o './src/model/generated/api.ts' && node --loader ts-node/esm ./patchZodios.ts",
    "generate-model-tenant-process": "mkdir -p ./src/model/tenant-process/generated && pnpm openapi-zod-client '../tenant-process/open-api/tenant-service-spec.yml' -o './src/model/tenant-process/generated/api.ts' && node --loader ts-node/esm ./patchZodios.ts",
    "clean-generated": "pnpm exec rm ./src/model/generated/api.ts"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@pagopa/eslint-config": "3.0.0",
    "@types/express": "4.17.21",
    "@types/node": "20.12.13",
    "pagopa-interop-commons-test": "workspace:*",
    "prettier": "2.8.8",
    "testcontainers": "10.9.0",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  },
  "dependencies": {
    "@zodios/core": "10.9.6",
    "@zodios/express": "10.6.1",
    "axios": "1.7.2",
    "dotenv-flow": "4.1.0",
    "express": "4.19.2",
    "openapi-zod-client": "1.18.1",
    "pagopa-interop-commons": "workspace:*",
    "pagopa-interop-models": "workspace:*",
    "pagopa-interop-catalog-process": "workspace:*",
    "pagopa-interop-tenant-process": "workspace:*",
    "ts-pattern": "5.1.2",
    "zod": "3.23.8"
  }
}
