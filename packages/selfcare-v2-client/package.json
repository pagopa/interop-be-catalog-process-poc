{
  "name": "pagopa-selfcare-v2-client",
  "private": true,
  "version": "1.0.0",
  "description": "PagoPA client for selfcare v2",
  "main": "dist",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:autofix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "start": "node --watch --no-warnings --loader ts-node/esm ./src/index.ts",
    "build": "tsc",
    "generate-model": "mkdir -p ./src/model/generated && pnpm openapi-zod-client './open-api/selfcare-v2-client-spec.yml' -o './src/model/generated/api.ts'",
    "clean-generated": "pnpm exec rm ./src/model/generated/api.ts"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@zodios/core": "10.9.2",
    "pagopa-interop-models": "workspace:*",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/node": "20.3.1",
    "openapi-zod-client": "1.15.1"
  }
}
