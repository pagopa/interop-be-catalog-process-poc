{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "^build",
        "open-api-generate",
        "generate-protobuf",
        "//#infra:start"
      ]
    },
    "//#infra:start": {
      "cache": false
    },
    "//#infra:stop": {
      "cache": false
    },
    "//#infra:destroy": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "open-api-generate",
        "generate-protobuf",
        "^build"
      ],
      "outputs": [
        "dist"
      ]
    },
    "open-api-generate": {
      "dependsOn": [
        "^open-api-generate"
      ]
    },
    "generate-protobuf": {
      "dependsOn": [
        "^generate-protobuf"
      ],
      "outputs": [
        "src/gen"
      ]
    },
    "test": {
      "dependsOn": [
        "build",
        "^test"
      ]
    },
    "test:it": {
      "dependsOn": [
        "build",
        "^test:it"
      ]
    },
    "lint": {},
    "lint:autofix": {},
    "format:check": {},
    "format:write": {}
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}
