{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "^build",
        "generate-model",
        "generate-protobuf",
        "//#infra:start"
      ]
    },
    "//#infra:start": {
      "cache": false
    },
    "//#infra:stop": {
      "cache": false
    },
    "//#infra:destroy": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "generate-model",
        "generate-protobuf",
        "^build"
      ],
      "outputs": [
        "dist"
      ]
    },
    "check": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist"
      ]
    },
    "generate-model": {
      "dependsOn": [
        "^generate-model"
      ]
    },
    "generate-protobuf": {
      "dependsOn": [
        "^generate-protobuf"
      ],
      "outputs": [
        "src/gen"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
     ]
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist"
      ]
    },
    "lint:autofix": {},
    "format:check": {},
    "format:write": {}
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}
