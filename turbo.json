{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build", "generate-model", "infra:start"]
    },
    "infra:start": {
      "cache": false
    },
    "infra:stop": {
      "cache": false
    },
    "infra:destroy": {
      "cache": false
    },
    "build": {
      "dependsOn": ["generate-model", "^build"],
      "outputs": ["dist"]
    },
    "generate-model": {
      "outputs": ["src/model/generated"]
    },
    "test": {},
    "lint": {},
    "lint:autofix": {},
    "format:check": {},
    "format:write": {}
  },
  "globalDependencies": ["tsconfig.json"]
}
